{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "sourceMap": true,
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist",
  },
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "examples"
  ]
}
